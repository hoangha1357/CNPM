<div class="mt-4">
    <form method="POST" action="/user/register">
        {{#if massage}}
        <div class="alert alert-danger" role="alert">{{massage}}</div>
        {{/if}}
        <div class="form-group">
            <label for="Email1">Email address</label>
            <input type="email" name="email" class="form-control" id="Email1" aria-describedby="emailHelp" placeholder="Enter email">
        </div>

        <div class="form-group">
            <label for="Password">Password</label>
            <input type="password" name="password" class="form-control" id="Password" placeholder="Password">
        </div>

        <div class="form-group">
            <label for="confirm-password">Confirm Password</label>
            <input type="password" name="cfpassword" class="form-control" id="confirm-password" placeholder="Password">
        </div>
        <div class="form-group">
            <label for="name">Tên</label>
            <input type="text" name="name" class="form-control" id="confirm-password" placeholder="Nhập tên">
        </div>
        <div class="form-group">
            <label for="gender-input">Giới tính</label>
            <select name="gender" class="form-control" id="gender-input">
                <option value="">--chọn giới tính--</option>
                <option value="male">nam</option>
                <option value="female">nữ</option>
            </select>
        </div>
        <div class="form-group">
            <label for="address">Address</label>
            <input type="text" name="address" class="form-control" id="confirm-password" placeholder="Nhập địa chỉ">
        </div>
        <button type="submit" class="btn btn-primary ">Submit</button>
    </form>
</div>

