<div class="main">
    <form method="post" class="form" id="form-2" action="/resetpassword">
        <h3 class="heading">Reset password</h3>
        {{#if message}}
            <div class="alert alert-danger" role="alert">{{message}}</div>
        {{/if}}
        <div class="spacer"></div>

        <div class="form-group">
            <label for="exampleInputEmail1" class="form-label">Email</label>
            <input id="email" name="email" type="email" aria-describedby="emailHelp" placeholder="Ex: email@domain.com" class="form-control" >
            <span class="form-message"></span>
        </div>
        <button class="form-submit" type="submit">Submit</button>
    </form>

</div>