<div class="mt-4">
    <h2>
      Danh sách món ăn đã xóa
      <a href="/User/viewrevenue">
        <img src="/image/back.png" width="20" height="20" class="d-inline-block align-center" alt="">
      </a>
    </h2>
    
        <table class="table mt-4">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Tên món ăn</th>
                <th scope="col" >Thời gian xóa</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {{#each dishes}}
            <tr>
                <th scope="row">{{sum @index 1}}</th>
                <td>{{this.name}}</td>
                <td>{{this.deletedAt}}</td>
                <td>
                    <a href="" class="btn btn-primary btn-restore" data-id="{{this._id}}">Khôi phục</a>
                    <a href="" class="btn btn-primary" data-toggle="modal" data-id="{{this._id}}" data-target="#delete-dish-modal">Xóa vĩnh viễn</a>
                </td>
            </tr>
            {{else}}
            <tr>
                <td colspan="4" class="text-center">
                  Bạn chưa món ăn nào bị xóa.
                </td>
            </tr>
            {{/each}}
        </tbody>
        </table>
</div>

<!--confirm delete-->
<div id="delete-dish-modal" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Bạn chắc chắn muốn xóa vĩnh viễn?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Hành động này không thể khôi phục.</p>
      </div>
      <div class="modal-footer">
        <button type="button" id="btn-delete-dish" class="btn btn-danger">Xóa</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
      </div>
    </div>
  </div>
</div>


<form name="delete-dish-form" method="POST"></form>
<form name="restore-dish-form" method="POST"></form>

<script>
  
  document.addEventListener('DOMContentLoaded',function(){
    var dishId;
    var deleteForm = document.forms['delete-dish-form'];
    var restoreForm = document.forms['restore-dish-form'];
    var btnDeleteDish = document.getElementById('btn-delete-dish');
    var btnRestore = $('.btn-restore');

    $('#delete-dish-modal').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget); 
        dishId = button.data('id');
    });

    btnDeleteDish.onclick = function (){
      deleteForm.action = '/menu/' + dishId + '/force?_method=DELETE';
      deleteForm.submit();
    };
    
    btnRestore.click(function (e) {
        e.preventDefault();
        restoreForm.action = '/menu/' + $(this).data('id') + '/restore?_method=PATCH';
        restoreForm.submit();
    });
  });

</script>