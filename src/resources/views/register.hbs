<div class="mt-4">
    <form method="POST" action="">
        <div class="form-group">
            <label for="Email1">Email address</label>
            <input type="email" name="email" class="form-control" id="Email1" aria-describedby="emailHelp" placeholder="Enter email">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>

        <div class="form-group">
            <label for="Password">Password</label>
            <input type="password" name="password" class="form-control" id="Password" placeholder="Password">
        </div>

        <div class="form-group">
            <label for="confirm-password">Confirm Password</label>
            <input type="password" name="cfpassword" class="form-control" id="confirm-password" placeholder="Password">
        </div>

        <div class="form-group">
            <label for="gender-input">Giới tính</label>
            <select name="gender" class="form-control" id="gender-input">
                <option value="">--chọn giới tính--</option>
                <option value="male">nam</option>
                <option value="female">nữ</option>
            </select>
        </div>

        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Check me out</label>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>